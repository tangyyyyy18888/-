.form-container {
  padding: 20px;
}

.form-item {
  display: flex;
  margin-bottom: 15px;
}

.form-item text {
  width: 60px;
}

input,
radio-group {
  flex: 1;
  border: 1px solid #ccc;
  padding: 5px;
  border-radius: 5px;
}

.inputPlaceholder{
  width: 360rpx;
  height: 45rpx;
  border: 1px solid #DEDEDE;
  padding: 8rpx 40rpx 8rpx 20rpx;
  margin-left: 16rpx;
  border-radius: 10rpx;
  position: relative;
  overflow:hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}
.jiantou1{
  position: absolute;
  right: 10rpx;
  top: 8rpx;
  color: #e03e3e;
}
.content{
  margin-left: 60px;
  margin-top:-14px;
  margin-bottom: 10px;
  max-height: 390rpx;
  background: #ffffff;
  box-shadow:0px 0px 10px 10px rgba(209, 209, 209, 0.26);
  padding: 0px 0px 0px 10px;
  overflow-x: hidden;
  overflow-y: scroll;
}
.content>view{
  padding: 10rpx 2px;
}
.active{
  color: #56D88A;
}